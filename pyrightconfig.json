    {
      "root": ".",
      "pythonVersion": "3.13",
      "pythonPlatform": "Darwin",
      "extraPaths": [
        "/opt/anaconda3/envs/text-sim/lib/python3.13/site-packages"
      ]
    }
  ]
}

